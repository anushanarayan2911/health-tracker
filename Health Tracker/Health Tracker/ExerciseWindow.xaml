<Window x:Class="Health_Tracker.ExerciseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Health_Tracker"
        mc:Ignorable="d"
        Title="Exercise" Height="450" Width="800">
    <Canvas>
        <Button x:Name="BackButton" Content="Back" Click="BackButtonClick" Canvas.Top="10" Canvas.Left="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="ExerciseTitleLabel" Content="Exercise Title:" Canvas.Top="30" Canvas.Left="40"/>
        <TextBox x:Name="ExerciseTitleInput" Canvas.Top="35" Canvas.Left="150" Width="150"/>
        
        <Label x:Name="ExerciseDetailsLabel" Content="Exercise Details:" Canvas.Top="65" Canvas.Left="40"/>
        <TextBox x:Name="ExerciseDetailsInput" Canvas.Top="70" Canvas.Left="150" Width="400"/>

        <Label x:Name="FrequencyLabel" Content="Frequency:" Canvas.Top="100" Canvas.Left="40"/>
        <ComboBox x:Name="FrequencyDropDownMenu" Canvas.Top="105" Canvas.Left="150" Width="200">
            <ComboBoxItem x:Name="DailyOption" Content="Daily"/>
            <ComboBoxItem x:Name="WeeklyOption" Content="Weekly"/>
            <ComboBoxItem x:Name="CustomOption" Content="Custom"/>
        </ComboBox>

        <Label x:Name="StartTimeLabel" Content="Start Time" Canvas.Top="135" Canvas.Left="40"/>
        <ComboBox x:Name="StartTimeDropDownMenu" Canvas.Top="140" Canvas.Left="150" Width="75">
            <ComboBoxItem Content="00:00"/>
            <ComboBoxItem Content="01:00"/>
            <ComboBoxItem Content="02:00"/>
            <ComboBoxItem Content="03:00"/>
            <ComboBoxItem Content="04:00"/>
            <ComboBoxItem Content="05:00"/>
            <ComboBoxItem Content="06:00"/>
            <ComboBoxItem Content="07:00"/>
            <ComboBoxItem Content="08:00"/>
            <ComboBoxItem Content="09:00"/>
            <ComboBoxItem Content="10:00"/>
            <ComboBoxItem Content="11:00"/>
            <ComboBoxItem Content="12:00"/>
            <ComboBoxItem Content="13:00"/>
            <ComboBoxItem Content="14:00"/>
            <ComboBoxItem Content="15:00"/>
            <ComboBoxItem Content="16:00"/>
            <ComboBoxItem Content="17:00"/>
            <ComboBoxItem Content="18:00"/>
            <ComboBoxItem Content="19:00"/>
            <ComboBoxItem Content="20:00"/>
            <ComboBoxItem Content="21:00"/>
            <ComboBoxItem Content="22:00"/>
            <ComboBoxItem Content="23:00"/>
        </ComboBox>

        <Label x:Name="EndTimeLabel" Content="End Time" Canvas.Top="135" Canvas.Left="300"/>
        <ComboBox x:Name="EndTimeDropDownMenu" Canvas.Top="140" Canvas.Left="400" Width="75">
            <ComboBoxItem Content="00:00"/>
            <ComboBoxItem Content="01:00"/>
            <ComboBoxItem Content="02:00"/>
            <ComboBoxItem Content="03:00"/>
            <ComboBoxItem Content="04:00"/>
            <ComboBoxItem Content="05:00"/>
            <ComboBoxItem Content="06:00"/>
            <ComboBoxItem Content="07:00"/>
            <ComboBoxItem Content="08:00"/>
            <ComboBoxItem Content="09:00"/>
            <ComboBoxItem Content="10:00"/>
            <ComboBoxItem Content="11:00"/>
            <ComboBoxItem Content="12:00"/>
            <ComboBoxItem Content="13:00"/>
            <ComboBoxItem Content="14:00"/>
            <ComboBoxItem Content="15:00"/>
            <ComboBoxItem Content="16:00"/>
            <ComboBoxItem Content="17:00"/>
            <ComboBoxItem Content="18:00"/>
            <ComboBoxItem Content="19:00"/>
            <ComboBoxItem Content="20:00"/>
            <ComboBoxItem Content="21:00"/>
            <ComboBoxItem Content="22:00"/>
            <ComboBoxItem Content="23:00"/>
        </ComboBox>
    </Canvas>
</Window>
